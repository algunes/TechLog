<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="log-path">ProductionConfiguration</Property>
    </Properties>
    
    <Appenders>
    <File name="errors" fileName="logs/errorLog.log">
    <PatternLayout>
      <pattern>
           [%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
      </pattern>
      </PatternLayout>
    </File>
  </Appenders>
    
    <Loggers>
        <Logger name="org.hibernate" level="error" additivity="false">
            <AppenderRef ref="errors"/>
        </Logger>
        <Logger name="com.mysql" level="error" additivity="false">
            <AppenderRef ref="errors"/>
        </Logger>
        <Logger name="com.TechLog" level="error" additivity="false">
            <AppenderRef ref="errors"/>
        </Logger>
        <Logger name="javax.servlet" level="error" additivity="false">
            <AppenderRef ref="errors"/>
        </Logger>
        <Logger name="org.apache" level="error" additivity="false">
            <AppenderRef ref="errors"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="errors"/>
        </Root>
    </Loggers>
    
</Configuration>